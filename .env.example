# Alpaca Configuration
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading initially
# For live trading: https://api.alpaca.markets

# LLM Configuration (Choose one or both)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Database Configuration
DATABASE_URL=sqlite:///./trading_bot.db  # Use PostgreSQL for production: postgresql://user:pass@localhost/trading_db

# Trading Configuration
MAX_POSITION_SIZE_PCT=0.15               # Maximum 15% of portfolio per position
MAX_LEVERAGE=4.0                         # Maximum leverage multiplier
DAILY_PROFIT_TARGET=0.05                 # 5% daily profit target
MAX_DAILY_LOSS=-0.03                     # Stop trading if -3% daily loss
MAX_POSITION_HOLD_HOURS=48               # Maximum position hold time in hours
TRADING_START_TIME=14:25                 # London time
TRADING_END_TIME=21:05                   # London time
TIMEZONE=Europe/London

# Risk Management
STOP_LOSS_PCT=0.02                       # 2% stop loss per position
TAKE_PROFIT_PCT=0.04                     # 4% take profit per position
TRAILING_STOP_PCT=0.015                  # 1.5% trailing stop
MAX_CONCURRENT_POSITIONS=10              # Maximum simultaneous positions
MIN_VOLUME_THRESHOLD=1000000             # Minimum daily volume for tradeable symbols

# Strategy Parameters
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Logging
LOG_LEVEL=INFO                           # DEBUG, INFO, WARNING, ERROR
LOG_FILE=trading_bot.log
